<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="tenDayWeather"
            type="com.tolganacar.weatherforecast.view.tendayweather.TenDayWeatherUIModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tenDayWeatherDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{tenDayWeather.date}"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tenDayWeatherImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:downloadUrl="@{tenDayWeather.image}" />

        <TextView
            android:id="@+id/tenDayWeatherMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{tenDayWeather.minTemperature}"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tenDayWeatherMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{tenDayWeather.maxTemperature}"
            android:textSize="16sp" />

    </LinearLayout>
</layout>