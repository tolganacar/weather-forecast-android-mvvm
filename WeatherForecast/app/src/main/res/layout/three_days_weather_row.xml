<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="threeDaysWeather"
            type="com.tolganacar.weatherforecast.view.threedaysweather.ForecastDayUI" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tenDayWeatherDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{threeDaysWeather.date}"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/tenDayWeatherImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:downloadUrl="@{threeDaysWeather.image}" />

            <TextView
                android:id="@+id/tenDayWeatherMinTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end|center"
                android:text="@{String.valueOf(threeDaysWeather.minTemperature)}"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tenDayWeatherMaxTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@{String.valueOf(threeDaysWeather.maxTemperature)}"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D8D6D6" />
    </LinearLayout>
</layout>